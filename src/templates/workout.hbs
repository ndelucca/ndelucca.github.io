{{> partials/top_boilerplate}}
  
  <!-- Login Screen -->
  <div id="login-screen" class="login-screen">
    <div class="login-container">
      <h1>Acceso a Entrenamiento</h1>
      <form id="login-form" class="login-form">
        <div class="input-group">
          <label for="workout-password">Contraseña:</label>
          <input 
            type="password" 
            id="workout-password" 
            name="password" 
            placeholder="Ingrese la contraseña"
            required
          >
        </div>
        <button type="submit" class="login-button">Acceder</button>
        <div id="login-error" class="login-error" style="display: none;">
          Contraseña incorrecta. Inténtelo nuevamente.
        </div>
      </form>
    </div>
  </div>

  <!-- Main Workout Content (hidden initially) -->
  <div id="workout-content" class="workout-content" style="display: none;">
    <div class="title-with-selector">
      <div class="month-selector">
        <select id="month-select" class="month-select">
          <!-- Options will be populated by JavaScript -->
        </select>
      </div>
    </div>
  
  <!-- Routine Selector -->
  <div class="routine-selector">
    <div class="selector-grid">
      <!-- Week Headers Row -->
      <div class="weeks-row">
        <div class="week-header" data-week="1">
          <span class="week-title">SEMANA 1</span>
        </div>
        <div class="week-header" data-week="2">
          <span class="week-title">SEMANA 2</span>
        </div>
        <div class="week-header" data-week="3">
          <span class="week-title">SEMANA 3</span>
        </div>
        <div class="week-header" data-week="4">
          <span class="week-title">SEMANA 4</span>
        </div>
      </div>
      
      <!-- Days Row -->
      <div class="days-row">
        <div class="week-days active" data-week="1">
          <div class="day-link active" data-week="1" data-day="1">DÍA 1</div>
          <div class="day-link" data-week="1" data-day="2">DÍA 2</div>
          <div class="day-link" data-week="1" data-day="3">DÍA 3</div>
        </div>
        <div class="week-days" data-week="2">
          <div class="day-link" data-week="2" data-day="1">DÍA 1</div>
          <div class="day-link" data-week="2" data-day="2">DÍA 2</div>
          <div class="day-link" data-week="2" data-day="3">DÍA 3</div>
        </div>
        <div class="week-days" data-week="3">
          <div class="day-link" data-week="3" data-day="1">DÍA 1</div>
          <div class="day-link" data-week="3" data-day="2">DÍA 2</div>
          <div class="day-link" data-week="3" data-day="3">DÍA 3</div>
        </div>
        <div class="week-days" data-week="4">
          <div class="day-link" data-week="4" data-day="1">DÍA 1</div>
          <div class="day-link" data-week="4" data-day="2">DÍA 2</div>
          <div class="day-link" data-week="4" data-day="3">DÍA 3</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Current Routine Display -->
  <div class="current-routine">
    <div id="routine-content">
      <!-- Routine will be loaded here -->
    </div>
  </div>

  <!-- Original Gym Table (moved below routine) -->
  <h2>Tabla de Referencia</h2>
  <div class="workout-table-container">
    <table class="workout-table">
      <thead>
        <tr>
          <th rowspan="2">#</th>
          <th colspan="3">CALENTAMIENTO</th>
          <th colspan="2">E</th>
          <th colspan="2">F</th>
          <th rowspan="2">MAX</th>
        </tr>
        <tr class="percentage-row">
          <th>55%</th>
          <th>65%</th>
          <th>75%</th>
          <th>min<br>80%</th>
          <th>max<br>87.5%</th>
          <th>min<br>90%</th>
          <th>max<br>97.5%</th>
        </tr>
      </thead>
      <tbody id="workout-data">
        <!-- Data will be populated by JavaScript -->
      </tbody>
    </table>
  </div>
  
  </div> <!-- End workout-content -->
{{> partials/bottom_boilerplate}}